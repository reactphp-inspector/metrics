{
    "timeout": 120,
    "source": {
        "directories": [
            "src"
        ]
    },
    "logs": {
        "text": "./var/infection.log",
        "summary": "./var/infection-summary.log",
        "json": "./var/infection.json",
        "perMutator": "./var/infection-per-mutator.md"
    },
    "mutators": {
        "@default": true,
        "FunctionCallRemoval": {
            "ignore": [
                "ReactInspector\\Metrics::_subscribe"
            ]
        },
        "MethodCallRemoval": {
            "ignore": [
                "ReactInspector\\Metrics::removeObserver"
            ]
        },
        "NotIdentical": {
            "ignore": [
                "ReactInspector\\Metrics::removeObserver"
            ]
        }
    },
    "phpUnit": {
        "configDir": "./etc/qa/"
    }
}
